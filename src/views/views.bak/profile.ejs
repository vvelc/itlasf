<% layout('layouts/main.ejs') %> 
<h1 class="mt-4">Perfil</h1>
<h5 class="mt-2">Bienvenido, <%= user.name %> </h4>

<div class="container mt-4">
    <h4 class="mb-2">Otros usuarios: </h4>
    <div class="list-group mt-2">
        <% users.forEach(us => { %>
            <a href="/profile/<%= us._id %>" class="list-group-item list-group-item-action">
                <span>Usuario <%= us.name %> </span>
            </a>
        <% }) %>
    </div>
    <div class="mt-3">
        <span class="mr-1">Modo oscuro</span>
        <label class="switch">
            <input type="checkbox" id="chkbx">
            <span class="slider round"></span>
        </label>
    </div>
    <script>
        var chk = document.getElementById('chkbx');
        var body = document.getElementById('body');
        chk.addEventListener('change', () => {
            if(chk.checked) {
                body.classList.add('dark');
            } else {
                body.classList.remove('dark')
            }
        })
    </script>
</div>